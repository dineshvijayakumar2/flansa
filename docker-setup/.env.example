# Frappe + Flansa Environment Configuration
# Copy this file to .env and modify as needed

# Site Configuration
FRAPPE_SITE_NAME=mysite.local
ADMIN_PASSWORD=admin123
DEVELOPER_MODE=0

# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_NAME=frappe_db
DB_USER=frappe
DB_PASSWORD=frappe123
MYSQL_ROOT_PASSWORD=frappe123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Application Configuration
FLANSA_VERSION=1.0.0
FRAPPE_VERSION=15.75.0

# Security (Change these in production)
SECRET_KEY=your-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here

# Ports for local development
APP_PORT=8000
DB_PORT_EXTERNAL=3306
REDIS_PORT_EXTERNAL=6379

# Railway.com specific (for deployment)
RAILWAY_ENVIRONMENT=development