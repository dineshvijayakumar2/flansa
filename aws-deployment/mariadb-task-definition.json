{
  "family": "flansa-mvp-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::794038225817:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::794038225817:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "flansa-mvp",
      "image": "794038225817.dkr.ecr.us-east-1.amazonaws.com/flansa-mvp:symlink-fix",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "flansa-mvp-mysql.copguw28cxxg.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_USER",
          "value": "flansa_admin"
        },
        {
          "name": "DB_PASS",
          "value": "FlanSa2025Prod"
        },
        {
          "name": "DB_NAME",
          "value": "flansa_production"
        },
        {
          "name": "ADMIN_PASSWORD",
          "value": "FlanSa2025Prod"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/flansa-mvp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "mariadb"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 90
      }
    }
  ]
}