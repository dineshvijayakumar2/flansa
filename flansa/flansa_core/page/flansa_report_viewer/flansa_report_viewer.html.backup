<!-- Report Viewer Template -->
<div class="flansa-report-viewer-page">
    <!-- Page Header -->
    <div class="page-header">
        <div class="page-title-area">
            <div style="display: flex; align-items: center; gap: 15px;">
                <button class="btn btn-default" id="back-to-reports-btn" title="Back to Reports">
                    <i class="fa fa-arrow-left"></i>
                </button>
                <div>
                    <h2 class="page-title">
                        <i class="fa fa-chart-bar" style="margin-right: 8px; color: var(--flansa-primary, #007bff);"></i>
                        <span id="report-title">Loading Report...</span>
                    </h2>
                    <p class="page-subtitle" id="report-subtitle">Report Viewer</p>
                </div>
            </div>
        </div>
        <div class="page-actions"></div>
    </div>

    <!-- Loading State -->
    <div id="report-loading" style="display: none;">
        <div class="loading-container text-center" style="padding: 60px;">
            <div class="spinner"></div>
            <p class="text-muted">Loading report data...</p>
        </div>
    </div>

    <!-- Report Content -->
    <div id="report-content" style="display: none;">
        <!-- View Mode Toggle -->
        <div class="view-controls" style="margin-bottom: 20px;">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default view-mode-btn active" data-view="table">
                    <i class="fa fa-table"></i> Table
                </button>
                <button type="button" class="btn btn-default view-mode-btn" data-view="tile">
                    <i class="fa fa-th"></i> Tile
                </button>
            </div>
            
            <!-- Tile Controls (shown only in tile view) -->
            <div id="tile-controls" style="display: none; margin-left: 20px; float: left;">
                <div class="btn-group" role="group" style="margin-right: 10px;">
                    <button type="button" class="btn btn-default btn-sm tile-layout-btn active" data-layout="grid" title="Grid Layout">
                        <i class="fa fa-th"></i>
                    </button>
                    <button type="button" class="btn btn-default btn-sm tile-layout-btn" data-layout="horizontal" title="Horizontal Layout">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
                
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default btn-sm tile-size-btn" data-size="small" title="Small Tiles">
                        <i class="fa fa-compress"></i>
                    </button>
                    <button type="button" class="btn btn-default btn-sm tile-size-btn active" data-size="medium" title="Medium Tiles">
                        <i class="fa fa-square-o"></i>
                    </button>
                    <button type="button" class="btn btn-default btn-sm tile-size-btn" data-size="large" title="Large Tiles">
                        <i class="fa fa-expand"></i>
                    </button>
                </div>
            </div>
            
            <!-- Search Box -->
            <div class="search-container" style="float: right;">
                <div class="input-group">
                    <input type="text" class="form-control" id="report-search" placeholder="Search records...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" id="clear-search-btn">
                            <i class="fa fa-times"></i>
                        </button>
                    </span>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>

        <!-- Record Count Info -->
        <div class="record-info" style="margin-bottom: 15px;">
            <span id="record-count-info" class="text-muted"></span>
        </div>

        <!-- Table View -->
        <div id="table-view" class="report-view">
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="report-table">
                    <thead></thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>

        <!-- Tile View -->
        <div id="tile-view" class="report-view" style="display: none;">
            <div id="tile-container" class="tile-grid"></div>
        </div>

        <!-- No Results -->
        <div id="no-results" style="display: none;">
            <div class="empty-state text-center" style="padding: 60px;">
                <i class="fa fa-search text-muted" style="font-size: 48px; opacity: 0.3;"></i>
                <h4>No Results Found</h4>
                <p class="text-muted">No records match your current criteria.</p>
            </div>
        </div>

        <!-- Pagination -->
        <div id="pagination-container" style="margin-top: 20px;"></div>
    </div>

    <!-- Error State -->
    <div id="report-error" style="display: none;">
        <div class="error-container text-center" style="padding: 60px;">
            <i class="fa fa-exclamation-triangle text-danger" style="font-size: 48px;"></i>
            <h4>Error Loading Report</h4>
            <p class="text-muted" id="error-message">Something went wrong while loading this report.</p>
            <button class="btn btn-primary" onclick="location.reload()">
                <i class="fa fa-refresh"></i> Retry
            </button>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
