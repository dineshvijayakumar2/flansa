    }
    
    .tile-grid.layout-grid.size-large {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
        gap: 25px;
    }
    
    /* Horizontal Layout */
    .tile-grid.layout-horizontal {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    
    /* Masonry Layout */
    .tile-grid.layout-masonry {
        column-count: 4;
        column-gap: 20px;
    }
    
    .tile-grid.layout-masonry.size-small {
        column-count: 5;
        column-gap: 15px;
    }
    
    .tile-grid.layout-masonry.size-medium {
        column-count: 4;
        column-gap: 20px;
    }
    
    .tile-grid.layout-masonry.size-large {
        column-count: 3;
        column-gap: 25px;
    }
    
    .tile-grid.layout-masonry .gallery-card {
        break-inside: avoid;
        margin-bottom: 20px;
        display: inline-block;
        width: 100%;
    }
    
    .tile-grid.layout-masonry .gallery-image-wrapper {
        height: auto;
    }
    
