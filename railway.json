{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker-setup/Dockerfile.minimal"
  },
  "deploy": {
    "startCommand": "./start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/api/method/ping",
    "healthcheckTimeout": 30
  },
  "variables": {
    "RUN_MIGRATIONS": {
      "description": "Set to 'true' to run database migrations",
      "default": "false"
    },
    "SKIP_SITE_SETUP": {
      "description": "Set to 'true' to skip site creation (use existing)",
      "default": "true"
    },
    "REBUILD_ASSETS": {
      "description": "Set to 'true' to rebuild JS/CSS assets",
      "default": "false"
    }
  }
}