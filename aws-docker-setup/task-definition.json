{
  "family": "flansa-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::{ACCOUNT_ID}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "flansa-app",
      "image": "{ACCOUNT_ID}.dkr.ecr.{REGION}.amazonaws.com/flansa-app:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/flansa-app",
          "awslogs-region": "{REGION}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "SITE_NAME",
          "value": "flansa.local"
        },
        {
          "name": "BUILD_ASSETS",
          "value": "true"
        },
        {
          "name": "GUNICORN_WORKERS",
          "value": "2"
        },
        {
          "name": "GUNICORN_TIMEOUT",
          "value": "120"
        }
      ],
      "secrets": [
        {
          "name": "RDS_ENDPOINT",
          "valueFrom": "arn:aws:ssm:{REGION}:{ACCOUNT_ID}:parameter/flansa/rds/endpoint"
        },
        {
          "name": "RDS_USERNAME",
          "valueFrom": "arn:aws:ssm:{REGION}:{ACCOUNT_ID}:parameter/flansa/rds/username"
        },
        {
          "name": "RDS_PASSWORD",
          "valueFrom": "arn:aws:ssm:{REGION}:{ACCOUNT_ID}:parameter/flansa/rds/password"
        },
        {
          "name": "RDS_DB_NAME",
          "valueFrom": "arn:aws:ssm:{REGION}:{ACCOUNT_ID}:parameter/flansa/rds/dbname"
        },
        {
          "name": "REDIS_ENDPOINT",
          "valueFrom": "arn:aws:ssm:{REGION}:{ACCOUNT_ID}:parameter/flansa/redis/endpoint"
        },
        {
          "name": "ADMIN_PASSWORD",
          "valueFrom": "arn:aws:ssm:{REGION}:{ACCOUNT_ID}:parameter/flansa/admin/password"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "./health-check.sh"],
        "interval": 30,
        "timeout": 10,
        "retries": 3,
        "startPeriod": 180
      }
    }
  ]
}